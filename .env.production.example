# Production Environment Configuration for API Server
# Copy this file to .env.production and update with your actual values

# Database Configuration
POSTGRES_DB=alamin_rocks
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-password-here

# Redis Configuration (internal Docker network)
REDIS_URL=redis://redis:6379

# Security
SECRET_KEY=your-very-secure-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Application Settings
APP_NAME="Alamin Rocks API"
DEBUG=False

# Frontend URLs (hosted on Vercel)
FRONTEND_URL=https://alamin.rocks
ADMIN_URL=https://admin.alamin.rocks

# API URL (this server)
API_BASE_URL=https://api.alamin.rocks

# SSL Certificate Email (for Let's Encrypt)
SSL_EMAIL=your-email@example.com